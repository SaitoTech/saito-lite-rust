{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"moduleResolution": "node",
		"sourceMap": true,
		//    "skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "../built",
		"allowJs": true,
		//    "declaration": true,
		//    "declarationMap": true,
		//    "inlineSourceMap": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"lib": [
			"dom",
			"es5",
			"scripthost",
			"es2020.bigint",
			"es2015.collection"
		]
	},
	"exclude": [
		"../node_modules",
		"../lib/templates",
		"../bundler",
		"../lib/saito/ui/**/*"
	],
	"include": ["../lib/**/*.ts", "../scripts/start.ts"]
}
