# editorconfig.org

root = true

[*]
charset = utf-8
# EditorConfig for Prettier configuration

# Set the tab width to 2 spaces
[*.js]
indent_style = tab
indent_size = 2

# Disable single quotes for string literals
[*.js]
quote_type = double

# Enforce semicolons at the end of statements
[*.js]
insert_final_newline = true

# Add trailing commas in all contexts
[*.js]
trim_trailing_whitespace = true

# Limit the line length to 80 characters
[*.js]
max_line_length = 80
